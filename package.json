{
  "name": "universal-npm-starter",
  "version": "1.0.0",
  "private": true,
  "author": "Mike Nason <michael@nason.us> (https://github.com/nason)",
  "license": "MIT",
  "description": "Boilerplate for a NPM package for the node and browser",
  "keywords": [
    "universal",
    "module",
    "test",
    "boilerplate"
  ],
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run security-scan"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "pretest": "npm-run-all clean lint bundle",
    "test": "npm run test:node && npm run test:browser",
    "tdd": "npm-run-all clean --parallel bundle:tdd test:*:tdd",
    "test:coverage": "nyc npm run test:node",
    "test:coverage:coveralls-report": "nyc report --reporter=text-lcov --show-process-tree=false | coveralls",
    "test:node": "SERVER=true mocha test/runner test/specs/**/*-spec.js --opts test/node/mocha.opts",
    "test:node:tdd": "npm run bundle:wait && npm run test:node -- --watch",
    "test:browser": "CLIENT=true karma start test/browser/karma.conf.js",
    "test:browser:tdd": "npm run bundle:wait && npm run test:browser -- --auto-watch --no-single-run",
    "test:ci": "npm run test:coverage && npm run test:browser",
    "bundle": "rollup -c rollup.config.js",
    "bundle:tdd": "npm run bundle -- --watch",
    "bundle:wait": "just-wait -p dist/index.js",
    "docs": "documentation build src/index.js --github --format md --output API.md",
    "lint": "eslint --format ./node_modules/eslint-friendly-formatter --cache src test",
    "security-scan": "nsp check --output summary --warn-only",
    "dist": "npm-run-all clean bundle docs",
    "preversion": "npm run dist && git add API.md",
    "version": "auto-changelog --template compact --package; git add CHANGELOG.md",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nason/universal-npm-starter.git"
  },
  "bugs": {
    "url": "https://github.com/nason/universal-npm-starter/issues"
  },
  "homepage": "https://github.com/nason/universal-npm-starter#readme",
  "devDependencies": {
    "auto-changelog": "0.3.1",
    "babel-core": "6.18.2",
    "babel-loader": "6.2.8",
    "babel-plugin-external-helpers": "6.18.0",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-stage-0": "6.16.0",
    "chai": "3.5.0",
    "coveralls": "2.11.15",
    "documentation": "4.0.0-beta15",
    "eslint": "3.9.1",
    "eslint-friendly-formatter": "2.0.6",
    "eslint-import-resolver-node": "0.2.3",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-mocha": "4.7.0",
    "ghooks": "1.3.2",
    "imports-loader": "0.6.5",
    "just-wait": "1.0.9",
    "karma": "1.3.0",
    "karma-coverage": "1.1.1",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.1",
    "karma-phantomjs-launcher": "1.0.2",
    "karma-sauce-launcher": "1.1.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "mocha": "3.2.0",
    "np": "2.10.1",
    "npm-run-all": "3.1.2",
    "nsp": "2.6.2",
    "nyc": "8.4.0",
    "phantomjs-prebuilt": "2.1.13",
    "rimraf": "2.5.4",
    "rollup": "0.36.4",
    "rollup-plugin-babel": "2.6.1",
    "rollup-plugin-filesize": "1.0.1",
    "rollup-watch": "2.5.0",
    "semver": "5.3.0",
    "sinon": "2.3.5",
    "sinon-chai": "2.8.0",
    "webpack": "1.13.3"
  }
}
